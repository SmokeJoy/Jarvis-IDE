{
  "name": "type-safety-hud",
  "version": "1.0.0",
  "description": "TypeScript type safety monitoring dashboard for tracking refactoring progress",
  "author": "Jarvis AI Team",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "type-safety-hud": "bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "start": "node bin/cli.js",
    "test": "jest",
    "dashboard": "node bin/cli.js",
    "dashboard:html": "node bin/cli.js --html",
    "dashboard:trend": "node bin/cli.js --trend",
    "release": "npm publish --access public"
  },
  "keywords": [
    "typescript",
    "refactoring",
    "dashboard",
    "type-safety",
    "monitoring",
    "code-quality",
    "technical-debt"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "ora": "^7.0.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jarvis-ai/type-safety-hud"
  },
  "bugs": {
    "url": "https://github.com/jarvis-ai/type-safety-hud/issues"
  },
  "homepage": "https://github.com/jarvis-ai/type-safety-hud#readme"
} 