{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatSettings",
  "description": "Impostazioni per la chat e la generazione di testo",
  "type": "object",
  "properties": {
    "temperature": {
      "type": "number",
      "description": "Livello di casualità nella generazione, valori tra 0 e 1"
    },
    "maxTokens": {
      "type": "number",
      "description": "Massimo numero di token da generare"
    },
    "topP": {
      "type": "number",
      "description": "Sampling con probabilità cumulativa"
    },
    "presencePenalty": {
      "type": "number",
      "description": "Penalità per presenza di token"
    },
    "frequencyPenalty": {
      "type": "number",
      "description": "Penalità per frequenza di token"
    },
    "stopSequences": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Sequenze di testo che indicano di fermare la generazione"
    },
    "enableStreaming": {
      "type": "boolean",
      "description": "Abilita lo streaming della risposta"
    },
    "contextWindow": {
      "type": "number",
      "description": "Dimensione della finestra di contesto in token"
    },
    "model": {
      "type": "string",
      "description": "Modello LLM da utilizzare"
    },
    "workingDirectory": {
      "type": "string",
      "description": "Directory di lavoro per l'esecuzione dei comandi"
    },
    "shell": {
      "type": "string",
      "description": "Shell da utilizzare per l'esecuzione dei comandi"
    },
    "customInstructions": {
      "type": "string",
      "description": "Istruzioni personalizzate per il modello"
    },
    "mode": {
      "type": "string",
      "description": "Modalità operativa del modello"
    },
    "planActSeparateModels": {
      "type": "boolean",
      "description": "Usa modelli separati per pianificazione e azione"
    },
    "displayMode": {
      "type": "string",
      "enum": ["standard", "minimal", "full"],
      "description": "Modalità di visualizzazione dell'interfaccia"
    },
    "font": {
      "type": "string",
      "description": "Font da utilizzare nell'interfaccia"
    },
    "fontSize": {
      "type": "number",
      "description": "Dimensione del font"
    },
    "theme": {
      "type": "string",
      "enum": ["light", "dark", "system"],
      "description": "Tema dell'interfaccia"
    },
    "autosave": {
      "type": "boolean",
      "description": "Salvataggio automatico delle conversazioni"
    },
    "autosaveInterval": {
      "type": "number",
      "description": "Intervallo di tempo per il salvataggio automatico in millisecondi"
    },
    "maxHistoryMessages": {
      "type": "number",
      "description": "Numero massimo di messaggi da mantenere nella cronologia"
    },
    "enableDefaultPrompts": {
      "type": "boolean",
      "description": "Abilita i prompt predefiniti"
    },
    "enableAutoComplete": {
      "type": "boolean",
      "description": "Abilita il completamento automatico"
    },
    "enableSuggestions": {
      "type": "boolean",
      "description": "Abilita i suggerimenti"
    },
    "enableMarkdown": {
      "type": "boolean",
      "description": "Abilita il rendering markdown"
    },
    "language": {
      "type": "string",
      "description": "Lingua dell'interfaccia"
    },
    "enableSyntaxHighlighting": {
      "type": "boolean",
      "description": "Abilita l'evidenziazione della sintassi"
    },
    "saveHistory": {
      "type": "boolean",
      "description": "Salva la cronologia delle chat"
    },
    "maxHistoryItems": {
      "type": "number",
      "description": "Numero massimo di elementi nella cronologia"
    },
    "showAvatars": {
      "type": "boolean",
      "description": "Mostra gli avatar nei messaggi"
    },
    "enableAutoScroll": {
      "type": "boolean",
      "description": "Abilita lo scroll automatico"
    },
    "displayTimestamps": {
      "type": "boolean",
      "description": "Mostra i timestamp nei messaggi"
    },
    "useMarkdown": {
      "type": "boolean",
      "description": "Utilizza il markdown per i messaggi"
    }
  },
  "required": ["fontSize", "theme"],
  "additionalProperties": false
} 