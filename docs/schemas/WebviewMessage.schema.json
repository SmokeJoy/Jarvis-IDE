{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WebviewMessage",
  "description": "Messaggio inviato dal WebView all'estensione",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Tipo di messaggio",
      "enum": [
        "getSettings",
        "saveSettings",
        "chatRequest",
        "chatCancel",
        "chatHistory",
        "chatSave",
        "chatDelete",
        "chatClear",
        "setApiConfiguration"
      ]
    },
    "payload": {
      "type": "object",
      "description": "Contenuto del messaggio"
    }
  },
  "required": ["type", "payload"],
  "additionalProperties": false
} 