{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExtensionMessage",
  "description": "Messaggio inviato dall'estensione al WebView",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Tipo di messaggio",
      "enum": [
        "settings",
        "chatResponse",
        "chatError",
        "chatHistoryResponse",
        "apiConfigurationResponse",
        "statusUpdate",
        "notification",
        "error"
      ]
    },
    "payload": {
      "type": "object",
      "description": "Contenuto del messaggio"
    }
  },
  "required": ["type", "payload"],
  "additionalProperties": false
} 