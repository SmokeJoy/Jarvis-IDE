{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@types/*": ["./src/types/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "dist-scripts",
    "out",
    "coverage",
    "tests",
    "**/__tests__",
    "**/mocks/**",
    "src/webview/**",
    "src/webview-ui/**",
    "src/mas/**",
    "scripts/refactor/dashboard/vite.config.ts"
  ]
} 