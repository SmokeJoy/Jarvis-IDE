{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["src/shared/*"],
      "@webview/*": ["webview-ui/src/*"],
      "@extension/*": ["src/extension/*"],
      "@test/*": ["src/test/*"],
      "@types/*": ["src/shared/types/*"],
      "@core/*": ["src/core/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["vitest/globals", "node"]
  },
  "include": ["src/**/*", "webview-ui/src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "out", "dist"]
} 