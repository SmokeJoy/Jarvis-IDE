{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "../dist/webview-ui",
		"rootDir": "src",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@shared/*": ["../src/shared/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/*"],
			// "@types/*": ["src/types/*"] // Commentato/Rimosso - verificare se necessario
		},
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"allowJs": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "vscode-webview", "vitest/globals", "@testing-library/jest-dom"] // Aggiunti tipi per test
	},
	"include": ["src/**/*", "../src/shared/**/*"],
	"exclude": ["node_modules", "dist"]
}
