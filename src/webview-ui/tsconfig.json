{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "../../dist/webview-ui",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vscode-webview", "node", "vitest", "@testing-library/jest-dom"],
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@shared/*": ["../../src/shared/*"],
      "@types/*": ["../../src/types/*"]
    }
  },
  "include": ["src/**/*"],
  // Remove exclude for test files to allow TS checking
  // "exclude": ["**/*.test.ts", "**/*.test.tsx"]
} 