{
  "name": "jarvis-ide",
  "displayName": "Jarvis IDE",
  "description": "The first autonomous open source IDE controlled by an AI team",
  "version": "0.1.0",
  "publisher": "jarvis-ide",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jarvis-ide/jarvis-ide"
  },
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Machine Learning",
    "Snippets",
    "Education"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jarvis-ide.start",
        "title": "Start Jarvis IDE",
        "category": "Jarvis IDE"
      },
      {
        "command": "jarvis-ide.stop",
        "title": "Stop Jarvis IDE",
        "category": "Jarvis IDE"
      }
    ],
    "configuration": {
      "title": "Jarvis IDE",
      "properties": {
        "jarvis-ide.aiProvider": {
          "type": "string",
          "default": "anthropic",
          "enum": [
            "anthropic",
            "openai",
            "local"
          ],
          "description": "The AI provider to use"
        },
        "jarvis-ide.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the selected AI provider"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:websocket": "vitest run webview-ui/__tests__/utils/WebSocketBridge.test.ts",
    "test:board": "vitest run webview-ui/src/data/board/__tests__/state.test.ts"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/vscode": "^1.85.0",
    "@types/vscode-webview": "^1.57.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^3.1.1",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "eslint": "^8.56.0",
    "fast-glob": "^3.3.3",
    "glob": "^10.3.10",
    "jsdom": "^26.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.1",
    "ts-morph": "^25.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vscode-uri": "^3.0.8",
    "zod": "^3.24.3"
  }
}
