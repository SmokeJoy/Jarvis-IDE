{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist-scripts",
    "rootDir": "scripts/refactor",
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
    "lib": ["ES2020"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "scripts/refactor/**/*.ts",
    "scripts/refactor/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src",
    "test",
    "refactor-dashboard"
  ],
  "references": []
} 